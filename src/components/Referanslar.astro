---
export interface Props {
   headerText: string;
   headerTextColorized: string;
   referans_1: string;
   referans_2: string;
   referans_3: string;
   referans_4: string;
   referans_5: string;
   referans_6: string;
   referans_7: string;
   referans_8: string;
   referans_9: string;
   referans_10: string;
   referans_11: string;
   referans_12: string;
   referans_13: string;
   referans_14: string;
   referans_15: string;
}

const { headerText, headerTextColorized, referans_1, referans_2, referans_3, referans_4, referans_5, referans_6, referans_7, referans_8, referans_9, referans_10, referans_11, referans_12, referans_13, referans_14, referans_15 } = Astro.props;
---

<section>
    <h2>{headerText} <mark class="blue-text">{headerTextColorized}</mark></h2>

    <article>
        <ul class="grid lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1">
            <li>{referans_1}</li>
            <li>{referans_2}</li>
            <li>{referans_3}</li>
            <li>{referans_4}</li>
            <li>{referans_5}</li>
            <li>{referans_6}</li>
            <li>{referans_7}</li>
            <li>{referans_8}</li>
            <li>{referans_9}</li>
            <li>{referans_10}</li>
            <li>{referans_11}</li>
            <li>{referans_12}</li>
            <li>{referans_13}</li>
            <li>{referans_14}</li>
            <li>{referans_15}</li>
        </ul>
    </article>
</section>

<style>
    section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 10rem;
        width: 100%;
    }

    h2{
        font-weight: var(--wmedium);
        font-size: var(--h1);
    }
    h2 mark.blue-text{
        color: var(--primary-color);
        font-weight: var(--wbold);
        background-color: white;
    }
    .motto-text{
        font-size: var(--h5);
        font-weight: var(--wregular);
        color: #7C7C7C;
        margin-top: 1rem;
    }
    ul{
        background-color: var(--primary-color);
        column-gap: 8rem;
        row-gap: 3.615rem;
        width: 100%;
        padding: 2.5rem;
        border-radius: 20px;
        list-style: disc;
        color: var(--white);
        margin-top: 2.5rem;
    }
    li{
        text-decoration: underline;
        text-underline-offset: 5px;
    }
    
    @media only screen and (max-width: 1023px){
        h2{
            font-size: var(--h2);
        }
    }

    @media only screen and (max-width: 954px){
        h2{
            font-size: var(--h3);
        } 
    }
</style>

